@model Haber
<div class="col-lg-6 col-sm-6">
    <div class="news-content wow fadeInLeft" data-wow-duration="1s" data-wow-delay="300ms">
        <div class="entry-header">
            <div class="blog-image">
                <a target="_blank" href="@Model.Link"><img alt="" src="@Model.Resim" class="img-responsive"></a>
            </div>
        </div>
        <div class="entry-content">
            <h3 class="entry-title">
                <a target="_blank" href="@Model.Link">@Model.Baslik</a>
            </h3>
            <ul class="entry-meta">
                <li><a href="#"><i class="fa fa-user"></i> By: Seyit Ömer <span>/</span></a></li>
                <li><a href="#"><i class="fa fa-tags"></i> Haberler <span>/</span></a></li>
                <li><a href="#"><i class="fa fa-comments"></i> 10 yorum</a></li>
            </ul>
            <p>@Model.Aciklama</p>
        </div>
    </div>
</div>
